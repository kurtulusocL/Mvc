@model ETicaret.Models.Resim
@{
    ViewBag.Title = "Ürün Resim Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        @ViewBag.Title
                    </header>
                    <div class="panel-body">
                        <form role="form" action="~/Admin/UrunResimEkle" method="post" enctype="multipart/form-data" class="form-horizontal tasi-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="uId" value="@Model" />                                                   
                            <div class="form-group has-error">
                                <label class="col-lg-2 control-label">Resim Seç</label>
                                <div class="col-lg-10">
                                    <input type="file" name="fileUpload" id="l-name" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-danger" type="submit">Kaydet</button>
                                    <button class="btn btn-default" type="button">İptal Et</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
